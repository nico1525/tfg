@inject NavigationManager Navigation
@page "/nuevoconsumo"
@using Web.Helpers;
@layout NavBarLogged
@inherits LayoutComponentBase

<PageTitle>Agregar Nuevo Consumo</PageTitle>

<style>
    #inilabel {
        font-size: 35px;
    }

    #tipolabel {
        font-size: 22px;
        margin-left: 1%;
        float: left;
        margin-top: 1%;
    }

    #text {
        text-align: center;
    }

    #navbar {
        margin-bottom: 2%;
    }

    #form {
        float: left;
        margin-top: 1%;
    }

    #button {
        font-size: 18px;
        margin-left: 30px;
        margin-top: 1%;
    }

    #select {
        font-size: 18px;
        margin-left: 30px;
    }

    #dispositivo {
        margin: 3% 20% 0 20%;
    }
</style>
<body>

    <div id="navbar"></div>
    <div id="text"> <label id="inilabel"><b>Añadir Nuevo Consumo</b></label></div>
    <label id="tipolabel"><b>Tipo de dispositivo:</b></label>
    <div id="form">
        <select @bind="dispositivo" id="select">
            <option value="vehiculo">Vehiculo</option>
            <option value="transporte">Transporte</option>
            <option value="maquinaria">Maquinaria</option>
            <option value="emisionesfugitivas">Emisiones Fugitivas</option>
            <option value="instalacionesfijas">Instalaciones Fijas</option>
            <option value="otrosconsumos">Otros Consumos</option>

        </select>
    </div>
    <div id="dispositivo">
        @Body
    </div>

</body>

@code {
    private string? dispositivo2;
    private string? dispositivo { get { return dispositivo2; } set { dispositivo2 = value;  SelectDispositivo(); } }
    public void SelectDispositivo()
    {
        Navigation.NavigateTo("agregar/" + dispositivo2);
    }
    protected override async Task OnInitializedAsync()
    {
        if (Storage.token == null)
        {
            Navigation.NavigateTo("");
            return;
        }
        Navigation.NavigateTo("nuevoconsumo/vehiculo");
    }
}
